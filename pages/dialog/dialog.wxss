/* pages/dialog/dialog.wxss */
page{
  background-color: #f2f2f2;
}
.dialogLeft {
  font-size: 30rpx;
  display: flex;
  margin: 10rpx;
  padding: 10rpx;
}

.dialogRight {
  font-size: 30rpx;
  display: flex;
  flex-direction:row-reverse;
  margin: 10rpx;
  padding: 10rpx;
}

.dialogLeftText {
  background-color: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.dialogRightText {
  background-color: #07c160;
  border-radius: 10rpx;
  padding: 20rpx;
}

.triangleLeft {
  margin-top: 20rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-right: 30rpx solid white;
  border-bottom: 20rpx solid transparent;
}

.triangleRight {
  margin-top: 20rpx;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-left: 30rpx solid #07c160;
  border-bottom: 20rpx solid transparent;
}